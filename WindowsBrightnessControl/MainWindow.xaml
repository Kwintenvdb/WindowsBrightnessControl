<Window x:Class="TestSetBrightness.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestSetBrightness"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<Slider HorizontalAlignment="Left" Margin="85,74,0,0" VerticalAlignment="Top" Width="100"
				Minimum="0"
				Maximum="100"
				Delay="0"
				Value="{Binding Brightness, Mode=TwoWay}"/>
	</Grid>
</Window>
